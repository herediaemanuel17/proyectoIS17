<div class="container">
	<h1> Crear una pregunta </h1>

	<%= form_for :pregunta do |p| %>

    <div class="row">
      <div class="col-md-6">
        <%= p.label :Titulo %>
          <%= p.text_field :titulo, class: 'form-control', label: 'Titulo', placeholder: 'ingrese el titulo' %>
        </div>
      </div>

		<div class="row">
			<div class="col-md-6">
				<%= p.label :Pregunta %>
  				<%= p.text_area :descripcion, class: 'form-control', label: 'Pregunta', placeholder: 'Ingrese una pregunta' %>
  			</div>
  		</div>

  		<%= p.submit "Preguntar", class: 'btn btn-primary' %>
  	</div>
<% end %>
</div>
