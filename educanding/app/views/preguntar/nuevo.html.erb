<div class="container">
	<h1> Crear una pregunta </h1>

	<%= form_for :pregunta , url:preguntar_crear_path do |p| %>

    <div class="row">
      <div class="col-md-6">
        <%= p.label :Titulo %>
          <%= p.text_field :titulo, class: 'form-control', label: 'Titulo', placeholder: 'ingrese el titulo', required:true %>
        </div>
      </div>

		<div class="row">
			<div class="col-md-6">
				<%= p.label :Pregunta %>
  				<%= p.text_area :descripcion, class: 'form-control', label: 'Pregunta', placeholder: 'Ingrese una pregunta', required:true %>
  			</div>
  		</div>
			<div class="field">
			    <% Label.all.each do |label| %>
			        <%= check_box_tag "pregunta[label_ids][]", label.id %>
			        <%= label.nombre %> <br>

			    <% end %>
			  </div>
  		<%= p.submit "Preguntar", class: 'btn btn-primary' %>
  	</div>
<% end %>
</div>
