
<% if user_signed_in?  %>
<div class="row">
	<div class="col-xs-4">
			<h3> Quieres realizar una nueva pregunta </h3>
				<%= link_to "Preguntar", preguntar_nuevo_path, class: 'btn btn-info btn-sm' %>
 	</div>
</div>
<div>
<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
 <li role="presentation" class="active"><a href="#Rece" aria-controls=" " role="tab" data-toggle="tab">Recientes</a></li>
 <li role="presentation"><a href="#MiUni" aria-controls=" " role="tab" data-toggle="tab">MiUni</a></li>
 <li role="presentation"><a href="#MenosR" aria-controls=" " role="tab" data-toggle="tab">MenosR</a></li>
</ul>
<!-- Tab panes -->
<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="Rece">
				<h1> Ultimas Preguntas </h1>
				<div class="col-xs-8">
					<table class= table>
					<tr>
						<th>Nombre de Usuario</th>
						<th>Titulo</th>
						<th>Fecha de Creacion</th>
					</tr>
					<% @question.each do |p| %>
						<tr>
							<td><%=p.User.name%></td>
							<td><%= link_to p.titulo, preguntar_lapregunta_path(:id=> p.id)%></td>
							<td><%=p.created_at%></td>
						</tr>

					<% end %>
					</table >
				</div>
		</div>
    <div role="tabpanel" class="tab-pane" id="MiUni">
			<h1> Preguntas de MiUniversidad </h1>
			<div class="col-xs-8">
				<table class= table>
				<tr>
					<th>Nombre de Usuario</th>
					<th>Titulo</th>
					<th>Fecha de Creacion</th>
				</tr>
				<% @questionMiUni.each do |p| %>
					<tr>
						<td><%=p.User.name%></td>
						<td><%= link_to p.titulo, preguntar_lapregunta_path(:id=> p.id)%></td>
						<td><%=p.created_at%></td>
					</tr>

				<% end %>
				</table >
			</div>
		</div>
		<div role="tabpanel" class="tab-pane" id="MenosR"></div>

</div>


<% else %>
<h1> Ultimas Preguntas </h1>
	<div class="col-xs-8">
		<table class= table>
		<tr>
			<th>Nombre de Usuario</th>
			<th>Titulo</th>
			<th>Fecha de Creacion</th>
		</tr>
		<% @question.each do |p| %>

			<tr>
				<td><%=p.User.name%></td>
				<td><%= link_to p.titulo, preguntar_lapregunta_path(:id=> p.id)%></td>
				<td><%=p.created_at%></td>
			</tr>

		<% end %>
		</table >
	</div>
<% end %>
