<!DOCTYPE html>
<html>
  <head>
    <title>Educanding</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete, class: 'btn btn-info btn-sm' %>
    <% else %>
      <%= link_to "Registrarce", new_user_registration_path, class: 'btn btn-info btn-sm'  %> |
      <%= link_to "Iniciar Sesion", new_user_session_path, class: 'btn btn-info btn-sm'  %>
    <% end %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
