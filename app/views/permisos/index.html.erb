<div class:"container">
<h1> Lista con los puntos necesarios para realizar acciones </h1>

  <table class:"table">
    <tr>
      <th> Acciones que puede realizar el usuario </th>
      <th> Puntos minimos requeridos </th>
      <th> Editar Puntos </th>
    </tr>
    <% @permisos.each do |p| %>
      <tr>
        <td><%= p.acciones %></td>
        <td><%= p.puntos %></td>
        <td><%= link_to "editar", permisos_nuevo_path(:id=>p.id) %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to "volver", root_path%>
</div>
